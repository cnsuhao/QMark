    <!-- android:toXDelta="60%" /> -->

    <alpha
        android:duration="300"
        android:fillAfter="false"
        android:fillEnabled="true"
        android:fromAlpha="1"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:startOffset="10000"
        android:toAlpha="0" />

    <scale
        android:duration="300"
        android:fillAfter="false"
        android:fillEnabled="true"
        android:fromXScale="1"
        android:fromYScale="1"
        android:interpolator="@android:anim/decelerate_interpolator"
        android:startOffset="10000"
        android:toXScale="0"
        android:toYScale="0" />

</set>