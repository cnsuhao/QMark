                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/m_settings_item_about_us"
                android:textColor="@color/text_m_settings_item_name"
                android:textSize="@dimen/text_size_17" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/img_m_settings_item_indicator" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:background="@color/divider_m_settings" />

        <Button
            android:id="@+id/m_settings_btn_exit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn_49"
            android:layout_marginBottom="@dimen/margin_bottom_45"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_m_settings_btn_exit_x"
            android:gravity="center"
            android:text="@string/m_settings_btn_exit"
            android:textColor="@color/bg_app"
            android:textSize="@dimen/text_size_login_21" />
    </LinearLayout>

</ScrollView>