<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.star.talk.startalk"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="3" >

        <ImageView
            android:id="@+id/m_welcome_img_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:contentDescription="@null"
            android:src="@drawable/img_m_welcome_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="4"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0px"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/m_welcome_img_market_360safe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:contentDescription="@null"
                android:src="@drawable/img_m_welcome_market_first_publish_360safe" />

            <ImageView
                android:id="@+id/m_welcome_img_market_yingyongbao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:contentDescription="@null"
                android:src="@drawable/img_m_welcome_market_first_publish_yingyongbao" />

            <ImageView
                android:id="@+id/m_welcome_img_market_baidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:contentDescription="@null"
                android:src="@drawable/img_m_welcome_market_first_publish_anzhi_91" />

            <TextView
                android:id="@+id/m_welcome_text_market_baidu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/m_welcome_market_lianheshoufa"
                android:textColor="@color/text_m_settings_item_name"
                android:textSize="@dimen/text_size_15" />

            <TextView
                android:id="@+id/m_welcome_text_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="@string/m_welcome_inner_test"
                android:textColor="@color/text_title_orange"
                android:textSize="@dimen/text_size_login_21" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/m_welcome_login_btn_bg"
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:background="@drawable/bg_m_welcome_login"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/m_welcome_login_text_qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:text="@string/m_welcome_login_qq"
                android:textColor="@color/bg_app"
                android:textSize="@dimen/text_size_login_21" />

            <com.wei.c.widget.DotLoadingView
                android:id="@+id/m_welcome_login_loding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:dotLoadingGap="8dp"
                app:dotLoadingSrcA="@drawable/m_welcome_login_laoding_dot_a_s"
                app:dotLoadingSrcB="@drawable/m_welcome_login_laoding_dot_b_s"
                app:dotLoadingSrcC="@drawable/m_welcome_login_laoding_dot_c_s"
                app:dotLoadingTimeInterval="150"
                app:dotOrientation="horizontal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>