    <style name="StarTalk.Text.ChooseStarSign">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:textColor">#595959</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="StarTalk.ProgressBar" parent="android:Widget.ProgressBar" />

    <style name="StarTalk.ProgressBar.Prompt">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">8dp</item>
        <item name="android:maxHeight">8dp</item>
