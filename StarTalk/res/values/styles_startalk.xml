<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StarTalk" />

    <style name="StarTalk.ListView">
        <item name="android:fadeScrollbars">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="StarTalk.ListView.NoDivider">
        <item name="android:divider">@null</item>
        <item name="android:dividerHeight">0px</item>
    </style>

    <style name="StarTalk.ListView.NoDivider.WhiteBg">
        <item name="android:background">@color/bg_app</item>
    </style>

    <style name="StarTalk.ListView.NoDivider.WhiteBg.SelectorTransparent">
        <item name="android:listSelector">@drawable/list_selector_transparent</item>
    </style>

    <style name="StarTalk.GridView">
        <item name="android:fadeScrollbars">true</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
    </style>

    <style name="StarTalk.GridView.SelectorTransparent">
        <item name="android:listSelector">@drawable/list_selector_transparent</item>
    </style>

    <style name="StarTalk.GridView.SelectorTransparent.EditPage">
        <item name="android:background">@color/divider_m_edit_gridview</item>
    </style>

    <style name="StarTalk.Text" />

